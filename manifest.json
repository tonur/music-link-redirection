{
  "manifest_version": 2,
  "name": "Music Link Redirection",
  "version": "0.2",
  "description": "Redirect Spotify, YouTube Music and more to your prefered streaming service, powered by Linktree Songlink/Odesli",
  "permissions": [
    "*://open.spotify.com/*",
    "*://music.youtube.com/match*",
    "https://api.song.link/*",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "music-link-redirection@kragh.dev",
      "strict_min_version": "60.0",
      "data_collection_permissions": {
        "required": ["none"]
       }
    },
    "gecko_android": {
      "id": "music-link-redirection@kragh.dev",
      "strict_min_version": "120.0",
      "data_collection_permissions": {
        "required": ["none"]
       }
    }
  }
}
